package com.java.nttadata.task.controllers;

import java.util.ArrayList;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;
import com.java.nttadata.task.models.Tasks;
import com.java.nttadata.task.repositories.TaskRepository;

@RestController
@RequestMapping("/tasks")
public class TaskController {
	@Autowired
	TaskRepository tasktrepository;
	
	@GetMapping("/listAll")
	public ArrayList<Tasks> ShowAllTasks(){
		return tasktrepository.findAll();
	}
	
}
